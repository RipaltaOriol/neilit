<%- include("../partials/header-plan") %>

  <!-- CONTENT -->
  <div class="pt-4 mx-4">
    <section id="trading-plan">
      <div class="container">
        <h2><%= __('Trading Plan') %></h2>
        <div class="journal-box px-0">
          <div class="plan-scroll">
            <% if (plans.id.length > 0) { %>
              <% plans.id.forEach((plan, i) => { %>
                <div class="d-flex justify-content-between plan-box mx-3 mb-3">
                  <div class="d-flex align-items-center">
                    <h3 class="m-1"><%= plans.title[i] %></h3>
                    <span class="mx-2">-</span>
                    <span><%= plans.date[i] %></span>
                  </div>
                  <div class="d-flex align-items-center">
                    <a href="/<%= currentUser.username %>/plan/<%= plan %>" class="btn-neilit d-inline mr-2 px-2">
                      <img src="/imgs/icons/visibility-white.svg" alt="show">
                    </a>
                    <form action="/<%= currentUser.username %>/plan/<%= plan %>?_method=DELETE" method="POST">
                      <button type="submit" class="btn-neilit d-inline mr-2 px-2">
                        <img src="/imgs/icons/delete-white.svg" alt="delete">
                      </button>
                    </form>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-center placeholder-plan"><%= __('No plans created yet') %></p>
              <br>
            <% } %>
            <div class="text-center my-2">
              <div id="spinner" class="spinner-border d-none" role="status">
                <span class="sr-only">Loading...</span>
              </div>
            </div>
          </div>
          <hr>
          <div class="d-flex justify-content-end mx-3">
            <a href="/<%= currentUser.username %>/plan/components/" class="btn-neilit"><%= __('New') %></a>
          </div>
        </div>
      </div>
    </section>
  </div>

<script type="text/javascript">
  var username = <%- JSON.stringify(currentUser.username) %>;
</script>

<!-- <section> is inside partials -->
</section>

<%- include("../partials/footer-plan") %>
