<%- include("../../../partials/header-log") %>

  <!-- CONTENT -->
  <div class="container mx-auto pt-5">
    <div class="journal-box px-0">
      <form action="/<%= currentUser.username %>/journal/comment" method="POST">
        <h3 class="mx-3"><%= __('Write Comment') %></h3>
        <hr>
        <div class="mb-2 mx-3">
          <div id="client-comment" class="editcontent" placeholder="<%= __('Write something to note about your operations') %>" contenteditable="true"></div>
        </div>
        <textarea id="server-comment" name="comment" class="d-none"></textarea>
        <div class="d-flex justify-content-end mx-3">
          <button id="store-comment" type="submit" class="btn-neilit"><%= __('Create') %></button>
        </div>
      </form>
    </div>
  </div>

<!-- <section> is inside partials -->
</section>
<!-- JQUERY -->
<script type="text/javascript" src="/utilities/jquery/jquery-3.5.1.min.js"></script>
<!-- LOCAL SCRIPTS -->
<script type="text/javascript" src="/js/comment.js"></script>

