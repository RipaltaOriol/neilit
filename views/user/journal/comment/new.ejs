<%- include("../../../partials/header-log") %>

  <!-- CONTENT -->
  <div class="container mt-3 mx-auto">
    <div class="journal-box px-0">
      <form action="/<%= currentUser.username %>/journal/comment" method="POST">
        <h3 class="mx-3">Escribir Comentario</h3>
        <hr>
        <div class="mb-2 mx-3">
          <div id="client-comment" placeholder="Escriba algo a remarcar de sus operaciones" contenteditable="true"></div>
        </div>
        <textarea id="server-comment" name="comment" class="d-none"></textarea>
        <div class="d-flex justify-content-end mx-3">
          <button id="store-comment" type="submit" class="btn-neilit">Crear</button>
        </div>
      </form>
    </div>
  </div>

<!-- <section> is inside partials -->
</section>
<!-- JQUERY -->
<script type="text/javascript" src="/utilities/jquery/jquery-3.5.1.min.js"></script>
