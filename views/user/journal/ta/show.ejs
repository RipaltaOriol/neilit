<%- include("../../../partials/header-log") %>

  <!-- CONTENT -->
  <div class="container mt-3 mx-auto">
    <div class="journal-box px-0">
      <form action="/<%= currentUser.username %>/journal/ta/<%= ta.id %>?_method=DELETE" method="POST">
        <h3 class="mx-3"><%= ta.title %> by <%= currentUser.username %></h3>
        <hr>
        <div class="mb-2 mx-3">
          <select class="custom-select p-1" disabled>
            <% for (var i = 0; i < currencies.length; i++) { %>
              <% if (i === ta.pair) { %>
                <option value="<%= i %>" selected><%= currencies[i] %></option>
              <% } else { %>
                <option value="<%= i %>"><%= currencies[i] %></option>
              <% } %>
            <% } %>
          </select>
          <div class="d-flex flex-column mt-2">
            <span>
              <label><%= ('Category') %>:</label>
              <input type="text" class="bg-hover orange px-2" value="<%= ta.category %>" readonly>
            </span>
            <span>
              <label><%= ('Date') %>:</label>
              <input type="date" class="bg-hover orange px-2" value="<%= ta.date %>" readonly>
            </span>
          </div>
        </div>
        <hr>

        <!-- START: user content -->
        <div id="ta-content" class="mx-3 mb-3">
          <%- ta.content %>
        </div>
        <!-- END: user content -->

        <div class="d-flex justify-content-end mx-3">
          <a href="javascript:history.back()" class="btn-neilit ml-2"><%= ('Cancel') %></a>
          <a href="/<%= currentUser.username %>/journal/ta/<%= ta.id %>/edit" class="btn-inverted ml-2"><%= ('Edit') %></a>
          <button type="submit" class="btn-neilit ml-2"><%= ('Delete') %></button>
        </div>
      </form>
    </div>
  </div>

  <!-- FIX: only use what's necessary -->
  <script>
    var strategies = <%- JSON.stringify(strategies) %>;
    var timeframes = <%- JSON.stringify(timeframes) %>;
  </script>

<!-- <section> is inside partials -->
</section>

<!-- JQUERY -->
<script type="text/javascript" src="/utilities/jquery/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/popper.min.js"></script>
<script type="text/javascript" src="/utilities/jquery/jquery-ui.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/bootstrap.min.js"></script>
<!-- LOCAL SCRIPTS -->
<script type="text/javascript" src="/js/ta.js"></script>

