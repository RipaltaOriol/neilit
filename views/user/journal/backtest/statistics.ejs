<%- include("../../../partials/header-log") %>

  <!-- CONTENT -->
  <div class="backtest mx-auto">
    <div class="journal-box px-0">
      <form action="/<%= currentUser.username %>/journal/backtest/<%= backtest.id %>?_method=DELETE" method="POST">
        <h3 class="mx-3">
          <%= backtest.title %>
          [<%= backtest.created_at.toLocaleDateString(currentUser.language, options) %>]
          <span class="backtest-result"><%= backtest.result %></span>
          <span class="float-right">
            <img class="info" src="/imgs/icons/info.svg" data-toggle="tooltip" data-placement="bottom" title="<%= __('To see the title of the addons hover on the component.') %>">
          </span>
        </h3>
        <hr>
        <div class="mx-3">
          <h3><%= __('Basic Statisitcs') %></h3>
          <table id="backtest-table" class="table table-sm">
            <tbody id="backtest-stats" class="table-bordered">
              <tr>
                <td><%= __('Total') %>:</td>
                <% if (statistics.sum != null) { %>
                  <td><%= statistics.sum.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Average') %>:</td>
                <% if (statistics.avg != null) { %>
                  <td><%= statistics.avg.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Count') %>:</td>
                <td><%= statistics.total.toFixed(2) %></td>
              </tr>
              <tr>
                <td><%= __('Win Rate') %>:</td>
                <% if (statistics.rate != null) { %>
                  <td><%= statistics.rate.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Wins') %>:</td>
                <% if (statistics.wins != null) { %>
                  <td><%= statistics.wins.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Lossses') %>:</td>
                <% if (statistics.loss != null) { %>
                  <td><%= statistics.loss.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Average Win') %>:</td>
                <% if (statistics.avg_win != null) { %>
                  <td><%= statistics.avg_win.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Average Loss') %>:</td>
                <% if (statistics.avg_loss != null) { %>
                  <td><%= statistics.avg_loss.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
              <tr>
                <td><%= __('Expected') %>:</td>
                <% if (statistics.expected != null) { %>
                  <td><%= statistics.expected.toFixed(2) %></td>
                <% } else { %>
                  <td>N/A</td>
                <% } %>
              </tr>
            </tbody>
          </table>
        </div>
        <br>
        <% if (!(backtest.comments == null ||Â backtest.comments == '')) { %>
          <div class="backtest-comment p-2 mx-3">
            <%- backtest.comments %>
          </div>
          <br>
        <% } %>
        <div class="d-flex justify-content-end mx-3">
          <a href="javascript:history.back()" class="btn-neilit ml-2"><%= __('Cancel') %></a>
        </div>
      </form>
    </div>
  </div>

<!-- <section> is inside partials -->
</section>

<!-- JQUERY -->
<script type="text/javascript" src="/utilities/jquery/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/popper.min.js"></script>
<script type="text/javascript" src="/utilities/jquery/jquery-ui.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/bootstrap.min.js"></script>
<!-- LOCAL SCRIPTS -->
<script type="text/javascript" src="/js/backtest.js"></script>

