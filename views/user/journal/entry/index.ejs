<%- include("../../partials/header-sub") %>

<!-- CONTENT -->
<div id="initial-user-screen" class="mt-3 mx-4">

  <div id="all-entries" class="journal-box my-4">
    <span class="d-flex justify-content-between align-items-bottom">
      <h5>Ãšltimas entradas</h5>
      <a href="#">Filtrar</a>
    </span>
    <hr>
    <div class="container">
      <% entries.titleEntry.forEach((title, index) => { %>
        <div class="row one-entry">
          <div class="col-5">
            <a class="entry-link" href="/username/journal/entry/ <%= entries.idEntry[index] %> "><%= title %></a>
          </div>
          <div class="col-3">
            <% if (entries.resultEntry[index] == "win") { %>
              <span class="tag-win"><%= entries.resultEntry[index].toUpperCase(); %></span>
            <% } else if (entries.resultEntry[index] == "loss") { %>
              <span class="tag-loss"><%= entries.resultEntry[index].toUpperCase(); %></span>
            <% } else if (entries.resultEntry[index] == "break even") { %>
              <span class="tag-be"><%= entries.resultEntry[index].toUpperCase(); %></span>
            <% } %>
          </div>
          <div class="col-3">
            <span class="strategy"><%= entries.strategyEntry[index] %></span>
          </div>
          <div class="col-1">
            <% if (entries.resultEntry[index] == null) { %>
              <span>
                <a href="#"><img src="/imgs/icons/open-ops.svg" alt=""></a>
              </span>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</div>
<!-- <section> is inside partials -->
</section>

<%- include("../../partials/footer-sub") %>
