<%- include("../../../partials/header-log") %>

  <!-- CONTENT -->
  <div class="container mx-auto pt-5 mb-5">
    <div class="journal-box px-0">
      <form action="/<%= currentUser.username %>/journal/entry/<%= entry.id %>?_method=DELETE" method="POST">
        <h3 class="mx-3"><%= entry.title %></h3>
        <hr>
        <div class="row mx-3 mb-4">
          <div class="col-6">
            <!-- GENERAL ENTRY INFORMATION -->
            <h5><%= __('General Information') %></h5>
            <div>
              <label><%= __('Asset') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= currencies[entry.pair] %>" readonly>
            </div>
            <span>
              <label><%= __('Category') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= entry.category %>" readonly>
            </span>
            <div>
              <label><%= __('Direction') %></label>
              <% if (entry.direction == 'long') { %>
                <input type="text" class="bg-hover orange px-2" value="<%= __('Long') %>" readonly>
              <% } else { %>
                <input type="text" class="bg-hover orange px-2" value="<%= __('Short') %>" readonly>
              <% } %>
            </div>
            <div>
              <label><%= __('Entry date') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= entry.entryDate %>" readonly>
            </div>
            <% if ('entryTime' in entry) { %>
              <div>
                <label><%= __('Entry time') %></label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.entryTime %>" readonly>
              </div>
            <% } %>
          </div>
          <!-- SPECIFIC ENTRY INFORMATION -->
          <div class="col-6">
            <h5><%= __('Specific Information') %></h5>
            <div>
              <label><%= __('Size') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= entry.size %>" readonly>
            </div>
            <div>
              <label><%= __('Strategy') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= strategies[entry.strategy] %>" readonly>
            </div>
            <div>
              <label><%= __('Timeframe') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= timeframes[entry.timeframe] %>" readonly>
            </div>
            <div>
              <label><%= __('Entry price') %></label>
              <input type="text" class="bg-hover orange px-2" value="<%= entry.entryPrice %>" readonly>
            </div>
            <% if ('stopLoss' in entry) { %>
              <div>
                <label><%= __('Stop Loss') %></label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.stopLoss %>" readonly>
              </div>
            <% } %>
            <% if ('takeProfit' in entry) { %>
              <div>
                <label><%= __('Take Profit') %></label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.takeProfit %>" readonly>
              </div>
            <% } %>
          </div>
        </div>
        <% if (entry.status != 0 && 'exitPrice' in entry) { %>
          <div class="row mx-3 mb-4">
            <div class="col-6">
              <h5><%= __('Results') %></h5>
              <div>
                <label><%= __('Exit price') %></label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.exitPrice %>" readonly>
              </div>
              <% if ('exitDate' in entry) { %>
                <div>
                  <label><%= __('Exit date') %></label>
                  <input type="text" class="bg-hover orange px-2" value="<%= entry.exitDate %>" readonly>
                </div>
              <% } %>
              <div>
                <label><%= __('Fees') %>:</label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.fees %>" readonly>
              </div>
              <% if (currentUser.showProfits) { %>
                <div>
                  <label><%= __('Profits') %>:</label>
                  <input type="text" class="bg-hover orange px-2" value="<%= entry.profits %>" readonly>
                </div>
              <% } %>
              <div>
                <label><%= __('Result') %></label>
                <input type="text" class="bg-hover orange px-2" value="<%= entry.result.toUpperCase() %>" readonly>
              </div>
            </div>
          </div>
        <% } %>
        <br>
        <h3 class="mx-3"><%= __('Comments') %></h3>
        <hr>
        <div class="mx-3">
          <% if ('comment' in entry) { %>
            <div><%= entry.comment %></div>
          <% } %>
        </div>
        <br>
        <h3 class="mx-3"><%= __('Technical Analysis') %></h3>
        <hr>
        <span class="mx-3">
          <label><strong><%= __('Go to the linked technical analysis') %>:</strong></label>
          <a href="/<%= currentUser.username %>/journal/ta/<%= entry.taId %>" class="text-decoration-none">
            <span class="bg-hover orange px-2"><%= __('Click') %></span>
          </a>
        </span>
        <div class="d-flex justify-content-end mx-3">
          <a href="javascript:history.back()" class="btn-neilit ml-2"><%= __('Cancel') %></a>
          <a href="/<%= currentUser.username %>/journal/entry/<%= entry.id %>/edit" class="btn-inverted ml-2"><%= __('Edit') %></a>
          <button type="submit" class="btn-neilit ml-2"><%= __('Delete') %></button>
        </div>
      </form>
    </div>
  </div>

<!-- <section> is inside partials -->
</section>

<!-- JQUERY -->
<script type="text/javascript" src="/utilities/jquery/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/popper.min.js"></script>
<script type="text/javascript" src="/utilities/jquery/jquery-ui.min.js"></script>
<script type="text/javascript" src="/utilities/bootstrap/js/bootstrap.min.js"></script>
<!-- LOCAL SCRIPTS -->
<script type="text/javascript" src="/js/ta.js"></script>

<%- include("../../../partials/footer-log") %>
