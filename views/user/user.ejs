                <table class="table table-hover table-borderless font-16 text-center">
                  <thead>
                    <tr class="pb-4">
                      <th><%= __('Asset') %></th>
                      <th><%= __('Lots') %></th>
                      <th><%= __('Direction') %></th>
                      <th><%= __('Entry date') %></th>
                      <th><%= __('Entry price') %></th>
                      <th><%= __('Current price') %></th>
                      <th><%= __('Open result') %></th>
