                                <%= __('Long') %>
                              </p>
                            <% } %>
                          </div>
                        </td>
                        <!-- Entry date -->
                        <td><%= dashboardOps[ops].date %></td>
                        <!-- Entry price -->
                        <td><%= dashboardOps[ops].entry %></td>
                        <!-- Current price -->
                        <td>---</td>
                        <!-- Open result -->
                        <td>
                          <div class=" d-flex flex-row justify-content-center">
                            <p class="mb-0 pill pill-roja pill-direction">
                              ---
                            </p>
                          </div>
                        </td>
